{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug with Bun",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "bun",
            "runtimeArgs": [
                "run",
                "${workspaceFolder}/github-trending.ts"
            ],
            "env": {
                "CLOUDFLARE_ACCOUNT_ID": "${env:CLOUDFLARE_ACCOUNT_ID}",
                "CLOUDFLARE_API_KEY": "${env:CLOUDFLARE_API_KEY}"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug with vite-node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "vite-node",
                "${workspaceFolder}/github-trending.ts"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug web",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "pnpm",
                "dev"
            ],
            "cwd": "${workspaceFolder}/docs", // 确保工作目录指向正确的路径
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "sourceMaps": true
        }
    ]
}